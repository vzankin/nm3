@page "/"

@inject IStringLocalizer<App> Localizer
@inject Db.MainContext Db

<PageTitle>@Localizer["Notification Monitor 2.0"]</PageTitle>

<ListGroup>
@foreach (var mailbox in Db.Mailboxes)
{
    <ListGroupItem>
        <Icon Name=@IconName.Inbox Margin="Margin.Is2.FromEnd" />
        <Blazorise.Link To=@($"mailbox/{mailbox.Id}")>@mailbox.Name</Blazorise.Link>
    </ListGroupItem>
}
</ListGroup>
