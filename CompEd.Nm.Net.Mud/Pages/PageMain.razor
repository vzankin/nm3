@page "/"

@inject IStringLocalizer<App> Localizer
@inject Db.MainContext Db

<PageTitle>@Localizer["Notification Monitor 2.0"]</PageTitle>

<MudPaper Class="pa-8" Width="100%" Height="100%">
    <MudStack Spacing="0">
        @foreach (var mailbox in Db.Mailboxes)
        {
            <MudNavLink Href=@($"mailbox/{mailbox.Id}") Icon=@Icons.Material.Filled.Inbox IconColor="Color.Primary">
                <MudText Typo="Typo.subtitle1">@mailbox.Name</MudText>
            </MudNavLink>
        }
    </MudStack>
</MudPaper>
